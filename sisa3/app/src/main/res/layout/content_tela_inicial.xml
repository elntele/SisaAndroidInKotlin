<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.ufrpe.android.sisa.TelaInicialActivity"
    tools:showIn="@layout/app_bar_tela_inicial">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/grade_matricula_text_view"
        android:text="Grade de Matricula"
        android:layout_weight="1"
        android:background="#dcdcdc"
        android:textColor="#000000"
        android:padding="30dp"
        android:layout_margin="1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginStart="1dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/gerar_recomendcoes_text_view"
        android:text="Gerar Recomendações"
        android:layout_weight="1"
        android:background="#dcdcdc"
        android:textColor="#000000"
        android:padding="30dp"
        android:layout_margin="1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginStart="1dp"
        android:gravity="center"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/grade_curso_text_view"
            android:text="Grade de Disciplinas"
            android:layout_weight="1"
            android:background="#dcdcdc"
            android:textColor="#000000"
            android:padding="30dp"
            android:layout_margin="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginStart="1dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/historico_text_view"
            android:text="Meu Histórico de Disciplinas"
            android:layout_weight="1"
            android:background="#dcdcdc"
            android:textColor="#000000"
            android:padding="30dp"
            android:layout_margin="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginStart="1dp"
            android:gravity="center">

        </TextView>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/recomendacoes_anteriores_text_view"
            android:text="Recomendações Anteriores"
            android:layout_weight="1"
            android:background="#dcdcdc"
            android:textColor="#000000"
            android:padding="25dp"
            android:layout_margin="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginStart="1dp"
            android:gravity="center">

        </TextView>
    </TableRow>
    <Button
        android:id="@+id/boas_vindas_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#990000"
        android:textColor="#FFFFFF"
        />
</TableLayout>
